@model eCommerce.Core.CommerceClasses.The_Products.Categories.Category

@{
    ViewData["Title"] = "AddUpdateCategory";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2><i class="fa fa-bars"></i> Add/Edit Category</h2>
                        <div class="clearfix"></div>
                        <a href="@Url.Action("ManageCategory", "AdminProduct")"><i class="fa fa-caret-left"></i> Back</a>
                    </div>
                    <div class="clearfix"></div>
                    <div class="x_content">
                        @using (Html.BeginForm("AddEditCategory", "AdminProduct", null, FormMethod.Post, true, htmlAttributes: new { @class = "form-horizontal" }))
                        {
                            @Html.HiddenFor(model => model.Id)
                            <div class="form-group">
                                <div class="col-md-2">
                                    <label class="control-label">Parent Category</label>
                                </div>
                                <div class="col-md-6">
                                    <select id="dropdown-parent" class="form-control" 
                                            asp-items="@(new SelectList(ViewBag.Parent, "Id", "Nama"))"
                                            asp-for="ParentId"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    <label class="control-label">Category Name</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Nama, htmlAttributes: new { @class = "form-control category-field" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-2">
                                    <button type="submit" class="btn btn-primary" id="btn-submit-category">Submit</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/AdminProduct/AdminProduct.js"></script>