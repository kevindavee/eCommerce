@model eCommerce.Core.CommerceClasses.Transactions.KonfirmasiPembayarans.KonfirmasiPembayaran

@{
    ViewData["Title"] = "Payment Confirmation";
}

<div class="section section-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Payment Confirmation</h1>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <form asp-action="PaymentConfirmation" enctype="multipart/form-data" asp-antiforgery="true" method="post">
                    <div class="form-horizontal">
                        @Html.HiddenFor(model => model.TransactionHeaderId)
                        <hr />
                        <div class="form-group">
                            <label asp-for="BankId" class="col-md-2 control-label">Bank</label>
                            <div class="col-md-10">
                                <select asp-for="BankId" class="form-control"
                                        asp-items="@(new SelectList(ViewBag.Bank)) "></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="NoRekening" class="col-md-2 control-label">Sender account number</label>
                            <div class="col-md-10">
                                <input asp-for="NoRekening" class="form-control" type="number" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="NamaPemilikRekening" class="col-md-2 control-label">Account Holder Name</label>
                            <div class="col-md-10">
                                <input asp-for="NamaPemilikRekening" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="NominalTransfer" class="col-md-2 control-label">Transfer Amount</label>
                            <div class="col-md-10">
                                <input asp-for="NominalTransfer" class="form-control" type="number" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Transfer Receipt Image</label>
                            <div class="col-md-10">
                                <input type="file" name="upload" accept="image/*" />
                            </div>
                        </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Submit" class="btn btn-default" />
                                </div>
                            </div>

                        </div>
                </form>

            </div>
        </div>
    </div>
</div>
