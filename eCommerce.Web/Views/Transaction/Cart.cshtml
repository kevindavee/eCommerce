@model eCommerce.Web.Models.TransactionViewModels.ShoppingCartViewModel

@{
    ViewData["Title"] = "Cart";
}

<!-- Page Title -->
<div class="section section-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Shopping Cart</h1>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Action Buttons -->
                <div class="pull-right">
                    <a href="#" class="btn"><i class="glyphicon glyphicon-shopping-cart icon-white"></i> CHECK OUT</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <!-- Shopping Cart Items -->
                <table class="shopping-cart">
                    <!-- Shopping Cart Item -->
                    <tr>
                        @foreach (var item in Model.TransactionHeader.TransactionDetails)
                        {
                            <td>
                                <div class="cart-item-title"><a href="#">@item.ProductInstance.Product.Nama</a></div>
                                <div class="feature">
                                    @foreach (var variant in item.ProductInstance.ProductInstanceOptions)
                                    {
                                        @Html.DisplayFor(variantName => variant.OptionValue.Options.OptionName) <text><b>@Html.DisplayFor(variantValue => variant.OptionValue.Value)</b></text>
                                    }
                                </div>
                            </td>
                            
                            @using (Html.BeginForm("UpdateQuantity", "Transaction", new { TransactionDetailId = item.TransactionHeaderId }, FormMethod.Post, true, htmlAttributes: new { @class = "form-horizontal" }))
                            {
                                <td class="quantity">
                                    @Html.TextBoxFor(modelItem => item.Quantity, htmlAttributes: new { @class = "form-control input-sm input-micro", type = "number", min = "1" })
                                </td>
                                <td class="price">Rp. @Html.DisplayFor(modelItem => item.Price)</td>
                                <td class="actions">
                                    <button type="submit" class="btn btn-group-xs btn-grey"><i class="glyphicon glyphicon-floppy-saved"></i>Update</button>
                                </td>
                            }
                            <td class="actions">
                                <a href="#" class="btn btn-xs btn-grey"><i class="glyphicon glyphicon-trash"></i></a>
                            </td>

                        }
                        <!-- Shopping Cart Item Image -->
                        <td class="image"><a href="page-product-details.html"><img src="img/product1.jpg" alt="Item Name"></a></td>
                        <!-- Shopping Cart Item Description & Features -->
                        <td>
                            <div class="cart-item-title"><a href="page-product-details.html">LOREM IPSUM DOLOR</a></div>
                            <div class="feature color">
                                Color: <span class="color-white"></span>
                            </div>
                            <div class="feature">Size: <b>XXL</b></div>
                        </td>
                        <!-- Shopping Cart Item Quantity -->
                        <td class="quantity">
                            <input class="form-control input-sm input-micro" type="text" value="1">
                        </td>
                        <!-- Shopping Cart Item Price -->
                        <td class="price">$999.99</td>
                        <!-- Shopping Cart Item Actions -->
                        <td class="actions">
                            <a href="#" class="btn btn-xs btn-grey"><i class="glyphicon glyphicon-pencil"></i></a>
                            <a href="#" class="btn btn-xs btn-grey"><i class="glyphicon glyphicon-trash"></i></a>
                        </td>
                    </tr>
                    <!-- End Shopping Cart Item -->
                </table>
                <!-- End Shopping Cart Items -->
            </div>
        </div>
        <div class="row">
            <!-- Shopping Cart Totals -->
            <div class="col-md-4 col-md-offset-8 col-sm-6 col-sm-offset-6">
                <table class="cart-totals">
                    <tr class="cart-grand-total">
                        <td><b>Total</b></td>
                        <td><b>Rp. @Model.TransactionHeader.TotalPrice</b></td>
                    </tr>
                </table>
                <!-- Action Buttons -->
                <div class="pull-right">
                    <a href="#" class="btn btn-grey"><i class="glyphicon glyphicon-refresh"></i> UPDATE</a>
                    <a href="#" class="btn"><i class="glyphicon glyphicon-shopping-cart icon-white"></i> CHECK OUT</a>
                </div>
            </div>
        </div>
    </div>
</div>

