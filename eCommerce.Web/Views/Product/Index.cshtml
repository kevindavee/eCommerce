
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model eCommerce.Web.Models.ProductViewModels.ProductViewModel
<script src="~/js/Product/Product.js"></script>
<div class="section section-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Products Listing (4 Columns)</h1>
            </div>
        </div>
    </div>
</div>

<div class="section section-white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-3">
                    <div class="available">
                        <ul>
                            <li>
                                Sort
                                <select style="margin-left:10px;" id="dropdown-sort">
                                    <option value="0">All</option>
                                    <option value="1">Most Seen</option>
                                    <option value="2">Lowest Price</option>
                                    <option value="3">Highest Price</option>
                                </select>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="">
                        <div class="form-group">
                            <div class="col-md-2">
                                <label for="usr" style="margin-top:20px;margin-left:-20px;">Min Price:</label>
                            </div>
                            <div class="col-md-4">
                                <input type="number" style="margin-top:7px;margin-left:-10px;height:50px;" class="form-control" id="txt-min-harga">
                            </div>
                            <div class="col-md-2">
                                <label for="usr" style="margin-top:20px;margin-left:-20px;">Max Price:</label>
                            </div>
                            <div class="col-md-4">
                                <input type="number" style="margin-top:7px;margin-left:-5px;height:50px;" class="form-control" id="txt-max-harga">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">

                    <a class="btn btn-block btn-success" type="button" id="btn-search" style="background-color:darkblue;margin-top:27px;" href="#">Search</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="eshop-section section" >
    <div class="container">
        <div class="row" id="div-product-list">
           @*@{ Html.Partial("ProductIndex", Model.ProductList)}*@
            @foreach (var item in Model.ProductList)
            {
                <div class="col-md-3 col-sm-6">
                    <!-- Product -->
                    <div class="shop-item">
                        <!-- Product Image -->
                        <div class="shop-item-image">
                            <a href="@Url.Action("DetailsProduct", new { ProductId = item.Product.Id })">
                                <img src="@if (item.Product.ProductImage != null)
	                                    {
		                                     @item.Product.ProductImage.FirstOrDefault()
	                                    }" alt="@item.Product.Nama">
                            </a>
                        </div>
                        <!-- Product Title -->
                        <div class="title">
                            <h3><a href="@Url.Action("DetailsProduct", new { ProductId = item.Product.Id })">@item.Product.Nama</a></h3>
                        </div>
                        <!-- Product Available Colors-->
                        @*<div class="colors">
                        <span class="color-white"></span>
                        <span class="color-black"></span>
                        <span class="color-blue"></span>
                        <span class="color-orange"></span>
                        <span class="color-green"></span>
                    </div>*@
                        <!-- Product Price-->
                        <div class="price">
                            from @item.Price
                        </div>
                        <!-- Add to Cart Button -->
                        <div class="actions">
                            <a href="page-product-details.html" class="btn btn-small"><i class="icon-shopping-cart icon-white"></i> Add to Cart</a>
                        </div>
                    </div>
                    <!-- End Product -->
                </div>
            }
        </div>
    </div>
</div>
