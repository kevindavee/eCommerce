@model eCommerce.Web.Models.AccountViewModels.RegisterAdminViewModel

@{
    ViewData["Title"] = "RegisterAdmin";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>RegisterAdmin</h2>

<div class="right_col" role="main">
    <div class="">
        <div class="">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2><i class="fa fa-bars"></i> Register New Admin</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="x_content">
                        @using (Html.BeginForm("RegisterAdmin", "Account", null, FormMethod.Post, true, htmlAttributes: new { @class = "form-horizontal" }))
                        {   
                            <div class="form-group">
                                <label asp-for="Username" class="col-md-2 control-label">Username</label>
                                <div class="col-md-6">
                                    <input asp-for="Username" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-md-2 control-label">Email</label>
                                <div class="col-md-6">
                                    <input asp-for="Email" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="col-md-2 control-label">Password</label>
                                <div class="col-md-6">
                                    <input asp-for="Password" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="col-md-2 control-label">Confirm Password</label>
                                <div class="col-md-6">
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="AdminRole" class="col-md-2 control-label">Role</label>
                                <div class="col-md-6">
                                    <select id="dropdown-role" class="form-control"
                                            asp-for="AdminRole">
                                        <option value="1">Product Admin</option>
                                        <option value="2">Finance Admin</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

