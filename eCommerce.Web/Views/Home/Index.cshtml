@model eCommerce.Web.Models.HomeViewModels.HomeViewModel

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/HomeImageSlider/samsungs6.jpg" alt="Los Angeles">
        </div>

        <div class="item">
            <img src="~/HomeImageSlider/samsungs7.jpg" alt="Chicago">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<div class="row">
    <div class="col-md-offset-1 col-md-10">
        <h3>Smartphone Top Picks</h3>
        @foreach (var item in Model.Product1)
        {
            <div class="col-md-3 col-sm-6">
                <div class="shop-item">
                    <div class="shop-item-image">
                        <a href="@Url.Action("DetailsProduct", "Product", new { ProductId = item.Id })">
                            @if (item.ProductImage.Count == 0)
                            {
                                <img src="~/no-image.png" alt="IMAGES" class="img-responsive" style="height: 150px;" />
                            }
                            else
                            {
                                <img src="@item.ProductImage.FirstOrDefault().Path" alt="IMAGES" class="img-responsive" style="height: 150px;" />
                            }
                        </a>
                    </div>
                    <div class="title">
                        <h3><b><a href="@Url.Action("DetailsProduct", "Product", new { ProductId = item.Id })">@item.Nama</a></b></h3>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
